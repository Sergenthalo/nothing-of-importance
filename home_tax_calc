<script>
function calc()
{
//formula variable
var avalue=document.forms[0].avalue.value*1;
var t;
//loop to select the land type
for (i=0; i<document.forms[0].ltype.options.length; i++)
{
if (document.forms[0].ltype.options[i].selected)
t = document.forms[0].ltype.options[i].value*1;
}
//This is the formula that does the math
var result=(((avalue/3)-t)*.007);
result=Math.round(result*100)/100;
//The line below shows the result in the box
document.getElementById("tax").innerHTML=result;
}
</script>
